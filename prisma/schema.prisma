generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/tenerife_music/nextjs_space/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Subscription {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now()) @map("created_at")

  @@map("subscriptions")
}

model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now()) @map("created_at")

  @@map("contacts")
}

model Event {
  id          String   @id @default(cuid())
  title       String
  date        String
  venue       String
  genre       String
  image       String
  description String
  published   Boolean  @default(true)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("events")
}

model Venue {
  id          String   @id @default(cuid())
  name        String
  location    String
  type        String
  capacity    String
  image       String
  description String
  genres      String[]
  address     String
  phone       String?
  website     String?
  hours       String?
  features    String[]
  published   Boolean  @default(true)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("venues")
}

model Article {
  id        String   @id @default(cuid())
  title     String
  excerpt   String
  content   String
  image     String
  date      String
  readTime  String
  icon      String
  published Boolean  @default(true)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("articles")
}
